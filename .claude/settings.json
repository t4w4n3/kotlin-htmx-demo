      "mcp__playwright__browser_click",
      "mcp__playwright__browser_type",
      "Bash(bun run check:*)",
      "Bash(bun run biome:*)",
      "Bash(bun run:*)",
      "Bash(npm view:*)",
      "Bash(shellcheck:*)",
      "Bash(markdownlint-cli2:*)",
      "Bash(uv sync:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Grep(./.env)",
      "Grep(./.env.*)",
      "Grep(./secrets/**)",
      "Grep(./backend/**/build/**)",
      "Grep(./backend/**/.gradle/**)"
    ],
    "ask": [
      "WebSearch",
      "WebFetch"
    ]
  },
  "model": "opus",
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/file_processor.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop_checks.sh",
            "timeout": 20000
          }
        ]
      }
    ]
  },
  "disabledMcpjsonServers": [],
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "kotlin-lsp@claude-plugins-official": true
  },
  "outputStyle": "default"
}
